<!DOCTYPE html>
<html>
	<head>
		<title>지도 위키</title>
		<link rel="stylesheet" type="text/css" href="../stylesheets/wiki.css" />
		<meta charset="UTF-8">
	</head>
	<body>
		<header id="nav">
			<div class="logo">지도위키</div>
				<div class="btn btn-newmap" name="modal" href="#newmap">new map</div>
			<% if (req.session.email){ %> 
				<div class="btn btn-sign-up" name="modal" href="#sign-up">sign up</div>
        	<% }  else { %>
				<div class="btn btn-sign-up" name="modal" href="#sign-up">sign up</div>
        		<div class="btn btn-sign-in" name="modal" href="#sign-in">sign in</div>
        	<% } %>
		</header>
		<section id="map">
			<svg></svg>
		</section>
		<ul id="timenav">
			<div class="bar flag-pointer"></div>
		</ul>
		<section id="modals">
		    <div id="newmap" class="window modal">
				<input class="year" type="text"/>
				<input class="submit" type="submit" value="Submit">
				<div class="close"></div>       
   			</div>
		    <div id="sign-up" class="window modal">
				<input class="email" type="text" value="email"/>
				<input class="password" type="text" value="password"/>
				<input class="submit" type="submit" value="Submit">       
				<div class="close"></div>       
   			</div>
   			<div id="sign-in" class="window modal">
				<input class="email" type="text" value="email"/>
				<input class="password" type="text" value="password"/>
				<input class="submit" type="submit" value="Submit">       
				<div class="close"></div>       
   			</div>
   		    <div class="mask"></div>
		</section>		
		<script type="text/javascript" src="../javascripts/jquery-1.11.3.min.js"/></script>
		<script type="text/javascript" src="../javascripts/handlebars-v3.0.3.js"></script>
		<script type="text/javascript" src="../javascripts/d3.min.js"></script>
		<script type="text/javascript" src="../javascripts/map.js"></script>
		<script type="text/javascript" src="../javascripts/wiki.js"></script>
	</body>
</html> 

